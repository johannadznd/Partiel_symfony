<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
    <img src="{{ asset('uploads/' ~ album.cover) }}​​" class="card-img-top" alt="{{ album.name }}​​" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{album.name}}</h5>
        <p class="card-text">{{album.releaseYear}}</p>
        <p>Artiste : {{album.artist.name}}</p>
        <a class="btn btn-light" href="{{path('artist_item', {'id' : album.artist.id})}}" role="button">Découvrir l'artiste</a>
      </div>
    </div>
  </div>
</div>